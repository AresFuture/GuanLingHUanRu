<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="426px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_marginTop="24px"
        android:layout_marginBottom="26px"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/mid_lltop">
        <TextView
            android:layout_width="30px"
            android:layout_height="1dp"
            android:background="#6965f0"
            android:layout_marginRight="10px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:text="精选好货"
            android:textColor="#6965f0"/>
        <TextView
            android:layout_width="30px"
            android:layout_height="1dp"
            android:background="#6965f0"
            android:layout_marginLeft="10px"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="238px"
        android:id="@+id/mid_recycle"
        android:layout_below="@+id/mid_lltop"
        android:layout_marginBottom="26px"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:layout_marginTop="24px"
        android:layout_marginBottom="26px"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/mid_llup"
        android:layout_below="@+id/mid_recycle">
        <TextView
            android:layout_width="30px"
            android:layout_height="1dp"
            android:background="#6965f0"
            android:layout_marginRight="10px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:text="头条资讯"
            android:textColor="#6965f0"/>
        <TextView
            android:layout_width="30px"
            android:layout_height="1dp"
            android:background="#6965f0"
            android:layout_marginLeft="10px"/>
    </LinearLayout>

</RelativeLayout>
