<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#fff"
    >
            <ImageView
                android:id="@+id/shopping_finsh"
                android:layout_width="44px"
                android:layout_height="44px"
                android:background="@drawable/finsh"
                android:layout_marginTop="35px"
                android:layout_marginLeft="20px"
                />
                <EditText
                    android:id="@+id/shopping_edit"
                    android:layout_width="558px"
                    android:layout_height="58px"
                    android:layout_marginTop="30px"
                    android:hint="请输入商品名称"
                    android:textSize="22px"
                    android:layout_toRightOf="@id/shopping_finsh"
                    android:layout_marginLeft="20px"
                    android:background="@drawable/search_marter"
                    />
            <ImageView
                android:id="@+id/shopping_menu"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_marginTop="30px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20px"
                android:background="@drawable/menu"
                />
    <android.support.v7.widget.CardView
        android:id="@+id/shipping_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="116px"
        app:cardElevation="10px"
        android:background="#000"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:text="综合"
                android:textSize="20px"
                android:background="#fff"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:text="价格"
                android:textSize="20px"
                android:background="#fff"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:layout_weight="1"
                android:text="销量"
                android:textSize="20px"
                android:background="#fff"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignTop="@id/shipping_card"
        android:layout_marginLeft="260px"
        android:layout_marginTop="25px"
        android:text="|"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/shipping_card"
        android:layout_marginLeft="500px"
        android:text="|"
        android:layout_marginTop="25px"
        />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/shopping_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shipping_card"
            android:layout_marginTop="25px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:background="#f7f7f7"
            android:layout_centerHorizontal="true"
            ></android.support.v7.widget.RecyclerView>
</RelativeLayout>
