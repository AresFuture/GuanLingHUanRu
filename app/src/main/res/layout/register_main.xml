<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_marginLeft="20px"
            android:background="@drawable/finsh"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新人注册"
            android:textSize="32px"
            android:textColor="#2a2a2a"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/flag_tv1"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"/>

        <TextView
            android:id="@+id/flag_tv2"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184px"/>

        <ImageView
            android:id="@+id/img_phonenumber"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_alignLeft="@id/flag_tv1"
            android:layout_alignBottom="@id/flag_tv1"
            android:background="@drawable/phone"/>

        <EditText
            android:background="@null"
            android:id="@+id/input_phone"
            android:layout_toRightOf="@id/img_phonenumber"
            android:paddingLeft="10px"
            android:layout_alignBottom="@id/flag_tv1"
            android:textSize="24px"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:hint="请输入您的手机号"/>

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_alignLeft="@id/flag_tv2"
            android:layout_alignBottom="@id/flag_tv2"
            android:background="@drawable/password"/>

        <EditText
            android:background="@null"
            android:id="@+id/input_password"
            android:layout_toRightOf="@id/img_password"
            android:paddingLeft="10px"
            android:layout_alignBottom="@id/flag_tv2"
            android:textSize="24px"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:hint="请输入您的密码"/>

        <Button
            android:id="@+id/img_show"
            android:layout_width="138px"
            android:layout_height="40px"
            android:text="获取验证码"
            android:textColor="#3d97fc"
            android:background="@drawable/red_button"
            android:textSize="20px"
            android:layout_marginRight="20px"
            android:layout_alignBottom="@id/flag_tv1"
            android:layout_marginBottom="10px"
            android:layout_alignEnd="@id/flag_tv1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="12px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/flag_tv3"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="92px"/>

        <TextView
            android:id="@+id/flag_tv4"
            android:layout_width="680px"
            android:layout_height="1px"
            android:background="#a0a0a0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="184px"/>

        <ImageView
            android:id="@+id/img_phonenumber3"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_alignLeft="@id/flag_tv3"
            android:layout_alignBottom="@id/flag_tv3"
            android:background="@drawable/phone"/>

        <EditText
            android:background="@null"
            android:id="@+id/input_phone3"
            android:layout_toRightOf="@id/img_phonenumber3"
            android:paddingLeft="10px"
            android:layout_alignBottom="@id/flag_tv3"
            android:textSize="24px"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:hint="请输入您的手机号"/>

        <ImageView
            android:id="@+id/img_password4"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_alignLeft="@id/flag_tv4"
            android:layout_alignBottom="@id/flag_tv4"
            android:background="@drawable/password"/>

        <EditText
            android:background="@null"
            android:layout_height="50px"
            android:id="@+id/input_password4"
            android:layout_toRightOf="@id/img_password4"
            android:paddingLeft="10px"
            android:layout_alignBottom="@id/flag_tv4"
            android:textSize="24px"
            android:textColor="#cccccc"
            android:layout_width="match_parent"
            android:hint="请输入您的密码"/>

    </RelativeLayout>

    <Button
        android:layout_marginTop="70px"
        android:layout_width="680px"
        android:layout_height="70px"
        android:layout_gravity="center_horizontal"
        android:text="立即注册"
        android:textSize="28px"
        android:textColor="#ffffff"
        android:background="@drawable/login_button"/>

    <CheckBox
        android:layout_marginLeft="20px"
        android:text="同意用户协议"
        android:textColor="#cccccc"
        android:layout_marginTop="20px"
        android:textSize="24px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_marginTop="200px"
        android:layout_width="680px"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="244px"
            android:layout_height="1px"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="244px"
            android:layout_height="1px"
            android:background="#e5e5e5"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_disanfang"
            android:layout_centerInParent="true"
            android:text="第三方登录"
            android:textSize="20px"
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/login_qq"
            android:layout_marginLeft="234px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_qq"
                android:background="@drawable/qq"
                android:layout_width="86px"
                android:layout_height="86px"/>
            <TextView
                android:layout_below="@id/img_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:layout_marginTop="18px"
                android:text="QQ登录"
                android:layout_centerHorizontal="true"
                android:textColor="#666666"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/login_weixin"
            android:layout_marginRight="234px"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_weixin"
                android:background="@drawable/wexin"
                android:layout_width="86px"
                android:layout_height="86px"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@id/img_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:layout_marginTop="18px"
                android:text="微信登录"
                android:textColor="#666666"/>
        </RelativeLayout>
    </RelativeLayout>
    
</LinearLayout>