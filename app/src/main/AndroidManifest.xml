<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.asus.onlyu">

    <!-- 配置权限的区域 -->
    <!-- 网络 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 读SD卡 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".appliaction.MyAppliacton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- Activity的区域 -->
        <activity android:name=".module.merchant.Shopping_Activity"/>
        <!-- 商品详情的页面 -->
        <activity android:name=".module.merchant.DetailsActivity"/>

        <meta-data
            android:name="design_width"
            android:value="720">
        </meta-data>
        <meta-data
            android:name="design_height"
            android:value="1280">
        </meta-data>

        <activity android:name=".module.shoppingcar.OrderActivity">
        </activity>
        <activity android:name=".module.shoppingcar.AddressActivity">
        </activity>
        <activity android:name=".module.shoppingcar.order.AllOrderActivity">
        </activity>
        <activity android:name=".module.home.view.Home_NFC_activity">
        </activity>
    </application>

</manifest>